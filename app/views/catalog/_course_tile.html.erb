<div class="mdc-card mdc-card__media" style="background-image: url('<%= course.course_image.url(:tile)%>')"> <!--   *****   TO SET IMAGE FOR CARD BG   *****   -->
  <section class="mdc-card__actions">
    <div class="mdc-layout-grid dep-term-grid">
      <div class="mdc-layout-grid__inner">
        <div class="mdc-layout-grid__cell mdc-layout-grid__cell--span-3"><span class="dep-img" style="color: #eeb111 !important; letter-spacing:.5px;"><%=course.department.name%></span></div>
        <div class="mdc-layout-grid__cell mdc-layout-grid__cell--span-9" style="text-align:right;"><%= render partial: "catalog/course_stats", locals: {course: course, course_offering: course.current_course_offering, short: true} %></div>
      </div>
    </div>
  </section>
  <section class="mdc-card__primary">
    <h2 class="mdc-card__title mdc-card__title--large"><%=course.fitted_name%></h2>
  </section>
</div>